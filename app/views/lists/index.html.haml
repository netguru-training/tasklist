%h1 Lists

%h2 tags
= render partial: "tag_cloud"
= render partial: "share_popup"
%table
  %tr
    %th Name
    %th Description
    %th
    %th
    %th

  - lists.each do |list|
    %tr
      %td= list.name
      %td= list.description
      %td= link_to 'Show', list
      %td= link_to 'Edit', edit_list_path(list)
      %td= link_to 'Destroy', list, :method => :delete, :data => { :confirm => 'Are you sure?' }
      %td= link_to 'Share', "#", :data => { :list_id => list.id.to_str }

%br

