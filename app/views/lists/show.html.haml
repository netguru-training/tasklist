%h2.text-info
  = list.name.titleize
%h4.text-muted
  = list.description

%div.task.left.col-md-2
  %h4
    Tasks:
%div.task.right.col-md-10
  = render 'tasks/tasks'
%hr.clear
%br

%h4
  Add new task:
= render 'tasks/form'
%br

= link_to 'Edit', edit_list_path(list)
\|
= link_to 'Back', lists_path
\|
= link_to "Copy list", copy_and_paste_list_path(list), method: :post
- if list.original.present?
  \|
  = link_to "Original list", list_path(list.original_id)
- if list.copies.present?
  \|
  = link_to "Copies of this list", copies_path(list)
